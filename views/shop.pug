extends layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/product.css")

block content
  if products.length > 0
    div.grid 
      each product in products
        article.card.product-item 
          header.card__header 
            h1.product__title #{product.title}
          div.card__image
            img(src="https://images.unsplash.com/photo-1612290148812-aa597768bf8a?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=500&ixlib=rb-1.2.1&q=80&w=600", alt="")
          div.card__content 
            h2.product__price $19.99
            p.product__description とてもすごい本についての内容です。
          div.card__actions 
            button.btn(type="button") Add to Cart
  else 
    h1 No Products
